<T3DataStructure>
  <meta>
  <langDisable>1</langDisable>
  </meta>
  <sheets>
    <main>
      <ROOT>
        <TCEforms>
          <sheetTitle>Main Settings</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <settings.newsletterStorage>
            <TCEforms>
              <label>Storage Page</label>
              <config>
                <type>group</type>
                <internal_type>db</internal_type>
                <allowed>pages</allowed>
                <size>1</size>
                <maxitems>1</maxitems>
                <minitems>0</minitems>
                <show_thumbs>1</show_thumbs>
              </config>
            </TCEforms>
          </settings.newsletterStorage>
          <settings.emailPlceholder>
            <TCEforms>
              <label>Email Placeholder Text</label>
              <config>
                <type>input</type>
                <eval>trim</eval>
              </config>
            </TCEforms>
          </settings.emailPlceholder>
          <settings.thankyouText>
            <TCEforms>
              <exclude>1</exclude>
              <label>Thank You Message</label>
              <config>
                <type>text</type>
				<cols>20</cols>
				 <rows>3</rows>
                <eval>trim</eval>
              </config>
            </TCEforms>
          </settings.thankyouText>
          <settings.alreadyRegisterText>
            <TCEforms>
              <exclude>1</exclude>
              <label>Already Register Message</label>
              <config>
                <type>text</type>
				<cols>20</cols>
				 <rows>3</rows>
                <eval>trim</eval>
              </config>
            </TCEforms>
          </settings.alreadyRegisterText>  
        </el>
      </ROOT>
    </main>	
  
   <sender>
      <ROOT>
        <TCEforms>
          <sheetTitle>Sender</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <settings.senderemail>
            <TCEforms>
              <exclude>1</exclude>
              <label>Sender Email</label>
              <config>
                <type>input</type>
              </config>
            </TCEforms>
          </settings.senderemail>
          <settings.senderName>
            <TCEforms>
              <exclude>1</exclude>
              <label>Sender Name (For Confirmation Mail to User)</label>
              <config>
                <type>input</type>
                <eval>trim</eval>
              </config>
            </TCEforms>
          </settings.senderName>          
          <settings.senderSubject>
            <TCEforms>
              <exclude>1</exclude>
              <label>Subject for Email to Sender </label>
              <config>
                <type>input</type>
                <eval>trim</eval>
              </config>
            </TCEforms>
          </settings.senderSubject>
          <settings.senderMessage>
            <TCEforms>
              <exclude>1</exclude>
              <label>Bodytext for Email to Sender</label>
              <config>
                <type>text</type>
                <default></default>
              </config>
              <defaultExtras>richtext[cut|copy|paste|formatblock|bold|italic|underline|left|center|right|orderedlist|unorderedlist|outdent|indent|link|image|line|chMode]:rte_transform[mode=ts_css]</defaultExtras>
            </TCEforms>
          </settings.senderMessage>         
        </el>
      </ROOT>
    </sender>
	  <receiver>
      <ROOT>
        <TCEforms>
          <sheetTitle>Receiver</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <settings.adminemail>
            <TCEforms>
              <exclude>1</exclude>
              <label>Admin Email</label>
              <config>
                <type>input</type>
              </config>
            </TCEforms>
          </settings.adminemail>
          <settings.adminName>
            <TCEforms>
              <exclude>1</exclude>
              <label>Admin Name (For Confirmation Mail to User)</label>
              <config>
                <type>input</type>
                <eval>trim</eval>
              </config>
            </TCEforms>
          </settings.adminName>          
          <settings.adminSubject>
            <TCEforms>
              <exclude>1</exclude>
              <label>Subject for Email to Sender </label>
              <config>
                <type>input</type>
                <eval>trim</eval>
              </config>
            </TCEforms>
          </settings.adminSubject>
          <settings.adminMessage>
            <TCEforms>
              <exclude>1</exclude>
              <label>Bodytext for Email to Admin</label>
              <config>
                <type>text</type>
                <default></default>
              </config>
              <defaultExtras>richtext[cut|copy|paste|formatblock|bold|italic|underline|left|center|right|orderedlist|unorderedlist|outdent|indent|link|image|line|chMode]:rte_transform[mode=ts_css]</defaultExtras>
            </TCEforms>
          </settings.adminMessage>         
        </el>
      </ROOT>
    </receiver>
	</sheets>
</T3DataStructure>
